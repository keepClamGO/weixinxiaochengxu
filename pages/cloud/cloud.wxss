@import "../../templates/logo_menu/logo_menu.wxss";
@import "../../templates/banner/banner.wxss";
@import '../../templates/productConMenu/productConMenu.wxss';
.container {
  background: #edf0f5;
  width: 100%;
  height: 100%;
} 
.banner{
    position: static;
}
.main{
  background: white;
  border-bottom:1px solid #c9ced6;
  margin-bottom:50rpx;
  overflow: hidden;
}
.main:last-child{
  margin-bottom: 0;
}
.advantage{
  clear: both;  
  overflow: hidden;
  margin-bottom:20rpx;
  padding:20rpx 50rpx;
}
.advantage_title{
  padding:50rpx 50rpx 20rpx;
}
.advantage_img{
  width:350rpx;
  height:90rpx;
  margin:20rpx 40rpx;
}
.advantage .advantage_t{
  clear: both;
  color: #0090ff;
  line-height: 60rpx;
  font-size: 40rpx;
  overflow: hidden;
  margin-bottom:20rpx;
}
.advantage .advantage_t image{
  float: left;
  max-width: 60rpx;
  max-height: 60rpx;
  padding:0 20rpx 0 0;
}

.reward{
  clear: both;  
  overflow: hidden;
  margin-bottom:20rpx;
  padding:20rpx 40rpx;
}
.reward_title{
  padding:50rpx;
  font-size: 40rpx;
}
.reward image{
  float: left;
  max-width: 80rpx;
  max-height: 80rpx;
  padding:20rpx;
  border:2px solid #ffa800;
  border-radius: 10rpx;
}
.reward .reward_text{
  float: right;
  width: calc(100% - 160rpx)
}
.reward_t{
  clear: both;
  color: #ffa800;
  padding-top:10rpx;
  line-height: 30rpx;
  font-size: 40rpx;
  overflow: hidden;
  margin-bottom:20rpx;
}
.public_title{
  border-bottom:1px solid #c9ced6;
  height: 58rpx;
  line-height: 58rpx;
  width:100%;
}  
