.container {
	position: relative;
	height:80rpx;
}
.barBox {
	width: 100%;
	height: 80rpx;
	background: #EDF0F5;
	position: absolute;
	top: 0;
	z-index: 7;
}
.backIcon {
	float: left;
	width: 80rpx;
	height: 100%;
	background:#035cac; 
}
.backIcon image {
	width: 60rpx;
	height: 60rpx;
	margin: 10rpx; 
}
.titleType {
	float: left;
	line-height: 80rpx;
	margin-left: 40rpx;
	color:#666; 
}
.subMenu {
	float: right;
	height: 100%;
}
.subMenu image {
	width: 70rpx;
	height: 70rpx;
	margin:5rpx 20rpx;
}
.subMenuList {
	width: 670rpx;
	position: absolute;
	z-index:6;
	left: 80rpx;
	top: -401rpx;
	background:#fff;
	border-bottom: 1px solid #ccc;
	border-left: 1px solid #ccc;
}
.subMenuItem {
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	padding: 10rpx;
	color: #666;
	font-size: 28rpx;
}